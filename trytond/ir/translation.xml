<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="translation_view_form">
            <field name="model">ir.translation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <![CDATA[
                <form string="Translations" col="6">
                    <label name="name"/>
                    <field name="name"/>
                    <label name="type"/>
                    <field name="type"/>
                    <label name="res_id"/>
                    <field name="res_id"/>
                    <label name="fuzzy"/>
                    <field name="fuzzy"/>
                    <label name="lang"/>
                    <field name="lang"/>
                    <label name="module"/>
                    <field name="module"/>
                    <group col="2" colspan="6" expand="1">
                        <separator name="src"/>
                        <separator name="value"/>
                        <field name="src"/>
                        <field name="value"/>
                    </group>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="translation_view_tree">
            <field name="model">ir.translation</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Translations" editable="bottom">
                    <field name="src" select="1"/>
                    <field name="value" select="1"/>
                    <field name="fuzzy" select="1"/>
                    <field name="name" select="2"/>
                    <field name="lang" select="1"/>
                    <field name="type" select="2"/>
                    <field name="res_id" select="2"/>
                    <field name="module" select="2"/>
                </tree>
              ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_translation_form">
            <field name="name">Translations</field>
            <field name="res_model">ir.translation</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_translation_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view_id" ref="translation_view_tree"/>
            <field name="act_window_id" ref="act_translation_form"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_translation_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view_id" ref="translation_view_form"/>
            <field name="act_window_id" ref="act_translation_form"/>
        </record>
        <menuitem name="Translations" parent_id="ir.menu_ir"
            action="act_translation_form" id="menu_translation_form"/>
        <record model="ir.action.wizard" id="act_translation_update">
            <field name="name">Update Translations</field>
            <field name="wiz_name">ir.translation.update</field>
        </record>
        <menuitem name="Update Translations"
            parent_id="menu_translation_form"
            action="act_translation_update"
            type="wizard"
            id="menu_translation_update"/>
        <record model="ir.action.wizard" id="act_translation_export">
            <field name="name">Export Translations</field>
            <field name="wiz_name">ir.translation.export</field>
        </record>
        <menuitem name="Export Translations"
            parent_id="menu_translation_form"
            action="act_translation_export"
            type="wizard"
            id="menu_translation_export"/>
    </data>
</tryton>
